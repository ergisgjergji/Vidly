@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3 text-center">Customers</h2>

@Html.ActionLink("Add customer", "New", "Customers", new { }, new { @class = "btn btn-md btn-primary" })
<hr/>

<table class="table table-bordered text-center w-100" id="customer-table">
    <thead>
        <tr class="table-dark">
            <th> Name </th>
            <th> Birthdate </th>
            <th> Subscribed to newsletter </th>
            <th> Membership Type </th>
            <th> Actions </th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts 
{
    <script>
        $(document).ready(function () {

            // DataTable
            var table = $('#customer-table').DataTable({         
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    { data: "name" },
                    {
                        data: "birthdate",
                        render: function (data, type, object) {

                            var date = new Date(data);
                            var dateTimeFormat = new Intl.DateTimeFormat('en', { year: 'numeric', month: 'short', day: '2-digit' });
                            var [{ value: month }, , { value: day }, , { value: year }] = dateTimeFormat.formatToParts(date);

                            return `${day}-${month}-${year }`;
                        }
                    },
                    {
                        data: "isSubscribedToNewsletter",
                        orderable: true,
                        searchable: true,
                        orderData: 2,
                        render: function (data, type, object) {
                            return data ?
                                `<i class="fa fa-check text-success" aria-hidden="true"> Yes </i>`
                                :
                                `<i class="fa fa-times text-danger" aria-hidden="true"> No </i>`;
                        }
                    },
                    { data: "membershipType.name" },
                    {
                        data: "id",
                        orderable: false,
                        searchable: false,
                        render: function (data, type, object) {
                            return '<div>' +
                                '<a href="/Customers/Edit/'+data+'" class="btn btn-sm btn-secondary mr-1 mb-1"> Edit </a>' +
                                '<a href="/Customers/Details/'+data+'" class="btn btn-sm btn-primary mr-1 mb-1"> Details </a>' +
                                '<button class="btn btn-sm btn-danger btn-delete-customer mr-1 mb-1" data-customer-id="'+data+'"> Delete </button>' +
                            '</div>';
                        }
                    }
                ]
            })

            // Delete click
            $('#customer-table').on("click", ".btn-delete-customer", function () {

                var btn = $(this);
                var id = btn.attr('data-customer-id');

                bootbox.confirm({
                    message: "Are you sure you want to delete this customer?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: '/api/customers/' + id,
                                method: 'DELETE',
                                success: () => {
                                    
                                    table.row(btn.parents('tr')).remove().draw();
                                    toastr.info(`Customer with id '${id}' was deleted successfully.`);
                                }
                            })
                        }
                    }
                });

            });
        });
    </script>
}